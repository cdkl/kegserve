<h1>Tap edit</h1>
<%= form_with(model: @tap, local: true) do |form| %>
  <% if @tap.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tap.errors.count, "error") %> prohibited this tap from being saved:</h2>

      <ul>
        <% @tap.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= form.label :beverage_id, "Beverage" %>
    <%= form.collection_select :beverage_id, @beverages, :id, :name, 
                             { include_blank: "No beverage" }, 
                             { class: 'form-control' } %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Tap', class: 'btn btn-primary' %>
  </div>
<% end %>

<p>
  <%= link_to 'Back to Taps List', taps_path, class: 'btn btn-secondary' %>
</p>